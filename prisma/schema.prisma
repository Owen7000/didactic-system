generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  userId Int @id @default(autoincrement())
  emailAddress String @unique
  pwHash String
  hasGivenConsent Boolean @default(false)
  fcmKey String @db.VarChar(4096)
  age Int
  biologicalSex String
  appointments Appointment[]
  userGoals UserGoal?
  dailyRecords DailyRecord[]
}

model Clinician {
  clinicianId Int @id @default(autoincrement())
  name String
  appointments Appointment[]
}

model Appointment {
  appointmentId Int @id @default(autoincrement())
  patient User @relation(fields: [patientId], references: [userId])
  patientId Int
  clinician Clinician @relation(fields: [clinicianId], references: [clinicianId])
  clinicianId Int
  notes String @default("")
  requirements String @default("")
  purpose String
  location String
  datetime DateTime
}

model UserGoal {
  userGoalId Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [userId])
  userId Int @unique
  stepsGoal Int @default(0)
  caloriesGoal Int @default(0)
  waterGoal Int @default(0)
  exerciseGoal Int @default(0)
}

model DailyRecord {
  dailyRecordId Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [userId])
  userId Int
  date DateTime
  steps Int @default(0)
  calories Int @default(0)
  systolic Int @default(0)
  diastolic Int @default(0)
  bloodPressureUpdated Boolean @default(false)
  waterConsumption Int @default(0)
  exerciseMinutes Int @default(0)
  height Int @default(-1)
  weight Int @default(-1)
}